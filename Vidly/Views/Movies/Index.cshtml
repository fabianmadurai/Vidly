@model List<Vidly.Models.Movie>
@{
    ViewBag.Title = "Index";
}

<h2>Movies</h2>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                Movie
            </th>
            <th>
                Genre
            </th>
        </tr>
    </thead>
    @foreach (var m in Model)
    {
        <tr>
            <td>@Html.ActionLink(m.Name,"Details","Movies",new { id = @m.Id },null)</td>
            <td>@m.Genre.Genres</td>
        </tr>
    }

</table>

